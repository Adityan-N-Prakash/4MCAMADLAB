<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="end"
        android:padding="24dp"
        android:textSize="36sp"
        android:id="@+id/display"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:tag="1"
            android:onClick="onNumberClick"
            android:id="@+id/btn1"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:tag="2"
            android:onClick="onNumberClick"
            android:id="@+id/btn2"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:tag="3"
            android:onClick="onNumberClick"
            android:id="@+id/btn3"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:tag="+"
            android:onClick="onOperatorClick"
            android:id="@+id/add"
            android:layout_margin="4dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:tag="4"
            android:onClick="onNumberClick"
            android:id="@+id/btn4"
            android:layout_margin="4dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:tag="5"
            android:onClick="onNumberClick"
            android:id="@+id/btn5"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:tag="6"
            android:onClick="onNumberClick"
            android:id="@+id/btn6"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:tag="-"
            android:onClick="onOperatorClick"
            android:id="@+id/minus"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:tag="7"
            android:onClick="onNumberClick"
            android:id="@+id/btn7"
            android:layout_margin="4dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:tag="8"
            android:onClick="onNumberClick"
            android:id="@+id/btn8"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:tag="9"
            android:onClick="onNumberClick"
            android:id="@+id/btn9"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:tag="*"
            android:onClick="onOperatorClick"
            android:id="@+id/multiply"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:tag="0"
            android:onClick="onNumberClick"
            android:id="@+id/btn0"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:tag="C"
            android:onClick="onClearClick"
            android:id="@+id/clear"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:tag="="
            android:onClick="onEqualClick"
            android:id="@+id/equal"
            android:layout_margin="4dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:tag="/"
            android:onClick="onOperatorClick"
            android:id="@+id/divide"
            android:layout_margin="4dp"
            />




    </GridLayout>

</LinearLayout>